<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.npike.android.wearunlock" >

    <application
        android:name=".WearUnlockApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- <activity -->
        <!-- android:name="net.npike.android.wearunlock.MainActivity" -->
        <!-- android:label="@string/app_name"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.MAIN" /> -->


        <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
        <!-- </intent-filter> -->
        <!-- </activity> -->

        <activity
            android:name=".activity.PrefActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LogActivity"
            android:label="@string/title_activity_log" />
        <activity
            android:name=".activity.OnboardingActivity"
            android:label="@string/title_activity_onboarding" />

        <service
            android:name=".WearUnlockService"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <provider
            android:name=".provider.LogProvider"
            android:authorities="net.npike.android.wearunlock"
            android:exported="false" >
            <grant-uri-permission android:pathPattern=".*" />
        </provider>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service
            android:name=".WearDiscoveryService"
            android:exported="false" >
        </service>
    </application>

</manifest>
