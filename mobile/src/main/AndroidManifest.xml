<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.npike.android.wearunlock">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="net.npike.android.wearunlock.WearUnlockApp"
        android:theme="@style/AppTheme">
        <!--<activity-->
            <!--android:name="net.npike.android.wearunlock.MainActivity"-->
            <!--android:label="@string/app_name">-->
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        <!--</activity>-->

        <activity
            android:name="net.npike.android.wearunlock.activity.PrefActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.npike.android.wearunlock.activity.LogActivity"
            android:label="@string/title_activity_log" >
        </activity>
        <activity
            android:name="net.npike.android.wearunlock.activity.OnboardingActivity"
            android:label="@string/title_activity_onboarding" >
        </activity>

        <service
            android:name="net.npike.android.wearunlock.WearUnlockService"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <provider
            android:name="net.npike.android.wearunlock.provider.LogProvider"
            android:authorities="net.npike.android.wearunlock"
            android:exported="false" >
            <grant-uri-permission android:pathPattern=".*" />
        </provider>
    </application>

</manifest>
